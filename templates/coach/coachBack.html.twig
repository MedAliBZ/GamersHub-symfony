{% extends 'backBase.html.twig' %}
{% block title %}Coachs{% endblock %}
{% block extraStyle %}
    <link href="{{ asset('back/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('back/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('back/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css') }}"
          rel="stylesheet">
    <link href="{{ asset('back/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css') }}"
          rel="stylesheet">
    <link href="{{ asset('back/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css') }}"
          rel="stylesheet">{% endblock %}
{% block content %}
    <div class="col-md-12 col-sm-12" style="margin-top: 20px;">
        <div class="x_panel">
            <div class="x_title">
                <h2>Coachs TABLE</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <p class="text-muted font-13 m-b-30">

                            </p>
                            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                <tr>
                                    {# <th>Id</th> #}
                                    <th>Username</th>
                                    {# <th>Name</th> #}
                                    {# <th>Second Name</th> #}
                                    <th>Game</th>
                                    <th>Description</th>

                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if(coachs is not null) %}
                                    {% for c in coachs %}
                                        <tr class="odd parent">
                                            {# <td>{{ usr.id }}</td> #}
                                            <td>{{ c.user.username }}</td>
                                            {# <td>{{ usr.name }}</td> #}
                                            {# <td>{{ usr.secondName }}</td> #}
                                            <td>{{ c.game != null ? c.game.name : "" }}</td>
                                            <td>{{ c.description }}</td>
                                            <td>
                                                <a href="{{ path("coach_edit_back", {'id': c.id}) }}"><i
                                                            class="fa fa-pencil"></i></a>
                                                <a href="{{ path("coach_delete_back", {'id': c.id}) }}"><i
                                                            class="fa fa-trash-o"></i></a>
                                                </a>
                                            </td>
                                        </tr>
                                        <div class="modal fade" id="{{ c.user.username }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title" id="exampleModalLabel">Coach</h4>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p><span style="font-size: 15px;font-weight: bold">Id: </span><span>{{ c.id }}</span></p>
                                                        <p><span style="font-size: 15px;font-weight: bold">Username: </span><span>{{ c.user.username }}</span></p>
                                                        <p><span style="font-size: 15px;font-weight: bold">Game: </span><span>{{ c.game ? c.game.name : "" }}</span></p>
                                                        <p><span style="font-size: 15px;font-weight: bold">Description: </span><span>{{ c.description }}</span></p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                {% endif %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

