{% extends 'frontBase.html.twig' %}
{% block extraStyle %}
    <link rel="stylesheet" href="{{ asset("front/css/extraStyle.css") }}">{% endblock %}
{% block title %}Profile{% endblock %}

{% block content %}
    <section id="banner-section" class="inner-banner profile">
        <div class="ani-img">
            <img class="img-1" src="{{ asset("front/images/banner-circle-1.png") }}" alt="icon">
            <img class="img-2" src="{{ asset("front/images/banner-circle-2.png") }}" alt="icon">
            <img class="img-3" src="{{ asset("front/images/banner-circle-2.png") }}" alt="icon">
        </div>
        <div class="banner-content d-flex align-items-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="main-content">
                            <h1>Games</h1>
                            <div class="breadcrumb-area">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb d-flex justify-content-center">
                                        <li class="breadcrumb-item"><a href="{{ path("home") }}">Home</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Games</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="available-game-section" style="margin-top: -300px;position: relative;">
        <div class="overlay pb-120">
            <div class="container wow fadeInUp">
                <div class="main-container">
                    <div class="row justify-content-between">
                        <div class="col-lg-10">
                            <div class="section-header">
                                <h2 class="title">Available Games</h2>
                                <p>We are constantly adding new games</p>
                            </div>
                        </div>
                    </div>
                    <div class="available-game-carousel">
                        {% for game in gamesList %}
                            <div class="single-item">
                                <div style="display: flex!important;flex-direction: column;align-items: center;">
                                    <a href="{{ path('gameById',{'id': game.id}) }}"><img style="width: 250px;height: 300px"
                                                     src="{{ 'games/images/'~asset(game.image) }}" alt="image"></a>
                                    {% if user.username in game.users %}
                                        <a href="{{ path('unfollowGame', {"id":game.id}) }}"
                                           style="margin-top: 10px;padding: 8px 25px;text-transform: none;background: linear-gradient(351.09deg, #230076 4.36%, #4D20CD 117.5%);"
                                           class="cmn-btn">Unfollow</a>
                                    {% else %}
                                        <a href="{{ path('followGame', {"id":game.id}) }}"
                                           style="margin-top: 10px;padding: 8px 25px;text-transform: none;background: linear-gradient(351.09deg, #230076 4.36%, #4D20CD 117.5%);"
                                           class="cmn-btn">Follow</a>
                                    {% endif %}
                                </div>
                            </div>

                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
