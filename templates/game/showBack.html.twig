{% extends 'backBase.html.twig' %}
{% block title %}Games{% endblock %}
{% block extraStyle %}
    <link href="{{ asset('back/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('back/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('back/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css') }}"
          rel="stylesheet">
    <link href="{{ asset('back/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css') }}"
          rel="stylesheet">
    <link href="{{ asset('back/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css') }}" rel="stylesheet">
{% endblock %}
{% block content %}
    <div class="col-md-12 col-sm-12" style="margin-top: 20px;">
        <div class="x_panel">
            <div class="x_title">
                <h2>Games Table</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <div class="col align-self-end">
                        <a href="{{ path("game_new") }}" class="btn btn-success"
                           style="text-decoration: none;color: white;cursor: pointer;">Add</a>
                    </div>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                        <tr>
                            <th>id</th>
                            <th>Name</th>
{#                            <th>Description</th>#}
                            <th>Users</th>
                            <th>Created At</th>
                            <th>Last Update</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for game in gamesList %}
                            <tr>
                                <td>{{ game.id }}</td>
                                <td>{{ game.name }}</td>
{#                                <td>{{ game.description }}</td>#}
                                <td>{{ game.users | join(', ') }}</td>
                                <td>{{ game.createdAt | date }}</td>
                                <td>{{ game.updatedAt | date }}</td>
                                <td>
                                    <a href="{{ path("game_edit", {'id': game.id}) }}"><i class="fa fa-pencil"></i></a>
                                    <a href="{{ path("game_delete", {'id': game.id}) }}"><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
{% endblock %}
