{% extends 'authBase.html.twig ' %}

{% block title %}Rate coach{% endblock %}

{% block auth %}
    <h4>Let's get started</h4>
    <div class="form-area">
        {% if formrating is defined %}
            {{ form_start(formrating) }}
            <h5 style="display: flex;justify-content: center;align-items: center;margin-bottom: 10%; color: aqua">
                {{ user.username }}
            </h5>
            <div>
            <div class="form-group" style="display: flex;justify-content: center;align-items: center">
                {{ form_label(formrating.q1,null,{'label_attr':{'style':'margin:5px !important; color:Orange;'}}) }}
                {{ form_widget(formrating.q1) }}
            </div>

            <div class="form-group" style="display: flex;justify-content: center;align-items: center">
                {{ form_label(formrating.q2,null,{'label_attr':{'style':'margin:5px !important; color:Orange;'}}) }}
                {{ form_widget(formrating.q2) }}
            </div>


            <div class="form-group"style="display: flex;justify-content: center;align-items: center">
                {{ form_label(formrating.q3,null,{'label_attr':{'style':'margin:5px !important; color:Orange;'}}) }}
                {{ form_widget(formrating.q3) }}
            </div>

            <div class="form-group"style="display: flex;justify-content: center;align-items: center">
                {{ form_label(formrating.q4,null,{'label_attr':{'style':'margin:5px !important; color:Orange;'}}) }}
                {{ form_widget(formrating.q4) }}

            </div>

            <div class="form-group">
                {{ form_row(formrating.Rate) }}
            </div>
            </div>
            {{ form_end(formrating) }}
        {% endif %}
        <a href="{{ path('coach_index') }}">back to Coachs list</a>

    </div>
{% endblock %}