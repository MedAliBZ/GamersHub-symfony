{% extends 'backBase.html.twig' %}
{% block title %}Update User{% endblock %}
{% block extraStyle %}
    <link href="{{ asset('back/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('back/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('back/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css') }}"
          rel="stylesheet">
    <link href="{{ asset('back/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css') }}"
          rel="stylesheet">
    <link href="{{ asset('back/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css') }}"
          rel="stylesheet">
    <link href="{{ asset('back/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css') }}"
          rel="stylesheet">
    <link rel="stylesheet" href="{{ asset("front/css/extraStyle.css") }}">
{% endblock %}
{% block content %}
    <div class="col-md-12 col-sm-12" style="margin-top: 20px;">
        <div class="x_panel">
            <div class="x_title">
                <h2><a href="{{ path("showUsers") }}">Users Table</a> <span style="font-weight: 800;color: #73879C;">/</span> Update User</h2>
                <div class="clearfix"></div>
            </div>

            <div class="x_content">
                <br/>
                <div id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                    {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                    <div class="item form-group">
                        {{ form_label(form.username,null,{'label_attr': {'class': 'col-form-label col-md-3 col-sm-3 label-align'}}) }}
                        <div class="col-md-6 col-sm-6 ">
                            {{ form_widget(form.username,{'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="error-div">
                            {{ form_errors(form.username) }}
                        </div>
                    </div>
                    <div class="item form-group">
                        {{ form_label(form.email,null,{'label_attr': {'class': 'col-form-label col-md-3 col-sm-3 label-align'}}) }}
                        <div class="col-md-6 col-sm-6 ">
                            {{ form_widget(form.email,{'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="error-div">
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div class="item form-group">
                        {{ form_label(form.name,null,{'label_attr': {'class': 'col-form-label col-md-3 col-sm-3 label-align'}}) }}
                        <div class="col-md-6 col-sm-6 ">
                            {{ form_widget(form.name,{'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="error-div">
                            {{ form_errors(form.name) }}
                        </div>
                    </div>
                    <div class="item form-group">
                        {{ form_label(form.secondName,null,{'label_attr': {'class': 'col-form-label col-md-3 col-sm-3 label-align'}}) }}
                        <div class="col-md-6 col-sm-6 ">
                            {{ form_widget(form.secondName,{'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="error-div">
                            {{ form_errors(form.secondName) }}
                        </div>
                    </div>
                    <div class="item form-group">
                        {{ form_label(form.coins,null,{'label_attr': {'class': 'col-form-label col-md-3 col-sm-3 label-align'}}) }}
                        <div class="col-md-6 col-sm-6 ">
                            {{ form_widget(form.coins,{'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="error-div">
                            {{ form_errors(form.coins) }}
                        </div>
                    </div>
                    <div class="item form-group">
                        {{ form_label(form.isEnabled,null,{'label_attr': {'class': 'col-form-label col-md-3 col-sm-3 label-align'}}) }}
                        <div class="col-md-6 col-sm-6 ">
                            {{ form_widget(form.isEnabled,{'attr': {'class': 'form-control', 'style': 'width:auto;'}}) }}
                        </div>
                    </div>
                    <div class="item form-group">
                        {{ form_label(form.isVerified,null,{'label_attr': {'class': 'col-form-label col-md-3 col-sm-3 label-align'}}) }}
                        <div class="col-md-6 col-sm-6 ">
                            {{ form_widget(form.isVerified,{'attr': {'class': 'form-control', 'style': 'width:auto;'}}) }}
                        </div>
                    </div>
                    <div class="item form-group">
                        {{ form_label(form.isAdmin,null,{'label_attr': {'class': 'col-form-label col-md-3 col-sm-3 label-align'}}) }}
                        <div class="col-md-6 col-sm-6 ">
                            {{ form_widget(form.isAdmin,{'attr': {'class': 'form-control', 'style': 'width:auto;'}}) }}
                        </div>
                    </div>
                    <div class="item form-group">
                        {{ form_label(form.birthDate,null,{'label_attr': {'class': 'col-form-label col-md-3 col-sm-3 label-align'}}) }}
                        <div class="col-md-6 col-sm-6 ">
                            {{ form_widget(form.birthDate) }}
                        </div>
                        <div class="error-div">
                            {{ form_errors(form.birthDate) }}
                        </div>
                    </div>
                    {% if error is defined %}
                        <div style="display: flex;justify-content: center;align-items: center;color: #d20808;">{{ error }}</div>
                    {% endif %}
                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 offset-md-3" style="display: flex">
                            <a class="btn btn-primary" href="{{ path("showUsers") }}">Cancel</a>
                            {{ form_row(form.update) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


