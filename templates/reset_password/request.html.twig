{% extends 'authBase.html.twig ' %}
{% block title %}Reset Password{% endblock %}

{% block auth %}
    <h1 class="h3 mb-3 font-weight-normal">Reset your password</h1>
    <div class="form-area">
        <div>
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            {{ form_start(requestForm) }}
            <div class="form-group">
                {{ form_label(requestForm.email) }}
                {{ form_widget(requestForm.email) }}
            </div>

            <div class="form-group">
                <button class="cmn-btn" type="submit">
                    Send Email
                </button>

            </div>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}

{% block otherAuth %}
    <div style="display: flex;flex-direction: column;">
        <p style="font-size: 17px;margin: 10px">Don't have an account?
            <a style="font-size: 17px;" href="{{ path("register") }}">Sign Up</a>
        </p>
        <p style="font-size: 17px;margin: 10px">Already have an account?
            <a style="font-size: 17px;" href="{{ path("app_login") }}">Login</a>
        </p>
    </div>
{% endblock %}