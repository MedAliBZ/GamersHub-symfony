{% extends 'authBase.html.twig ' %}
{% block title %}Reset Password{% endblock %}
{% block extraStyle %}
    <link rel="stylesheet" href="{{ asset("front/css/extraStyle.css") }}">
{% endblock %}
{% block auth %}
    <h1 class="h3 mb-3 font-weight-normal">Reset your password</h1>
    <div class="form-area">
        <div>
            {{ form_start(resetForm,{'attr':{'novalidate':'novalidate'}}) }}
            <div class="form-group">
                {{ form_label(resetForm.plainPassword.first) }}
                {{ form_widget(resetForm.plainPassword.first) }}
            </div>
            <div class="form-group">
                {{ form_label(resetForm.plainPassword.second) }}
                {{ form_widget(resetForm.plainPassword.second) }}
            </div>
            <div class="error-div">
            {{ form_errors(resetForm.plainPassword.first) }}</div>
            <div class="form-group" style="margin: 10px">
                <button class="cmn-btn" type="submit">
                    Reset password
                </button>

            </div>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
