{% extends 'frontBase.html.twig' %}
{% block title %}Rewards{% endblock %}
{% block extraStyle %}
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
   

    <link rel="shortcut icon" href="{{ asset("front/images/fav.png")}}" type="image/x-icon">
    <link rel="stylesheet" href="{{ asset("front/css/bootstrap.min.css")}}">
    <link rel="stylesheet" href="{{ asset("front/css/fontawesome.min.css")}}">
    <link rel="stylesheet" href="{{ asset("front/css/slick.css")}}">
    <link rel="stylesheet" href="{{ asset("front/css/nice-select.css")}}">
    <link rel="stylesheet" href="{{ asset("front/css/magnific-popup.css")}}">
    <link rel="stylesheet" href="{{ asset("front/css/animate.css")}}">
    <link rel="stylesheet" href="{{ asset("front/css/style.css")}}">
    
{% endblock %}

{% block content %}

    <section id="banner-section" class="inner-banner tournaments">
        <div class="ani-img">
            <img class="img-1" src="{{ asset("front/images/banner-circle-1.png") }}" alt="icon">
            <img class="img-2" src="{{ asset("front/images/banner-circle-2.png") }}" alt="icon">
            <img class="img-3" src="{{ asset("front/images/banner-circle-2.png") }}" alt="icon">
        </div>

        <div class="container">
            <div class="headign-info">
                <div class="top-area">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4 d-flex justify-content-center">
                            <img src="{{ asset("front/images/character_01.png") }}" alt="image">
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 d-flex align-items-center justify-content-sm justify-content-center">
                            <div class="mid-area text-center">
                                <img src="{{ asset("front/images/text-img.png") }}" alt="image">
                                <h5>Fortnite Weekly Nano</h5>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 zindex">
                            <img src="{{ asset("front/images/character_02.png") }}" alt="image">
                        </div>
                    </div>
                </div>
                <div class="bottom-area">
                    <div class="bottom">

                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#overview"
                                   role="tab" aria-controls="overview" aria-selected="true"></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#overview"
                                   role="tab" aria-controls="overview" aria-selected="true"></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#overview"
                                   role="tab" aria-controls="overview" aria-selected="true"></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="bracket-tab" data-toggle="tab" href="#bracket" role="tab"
                                   aria-controls="bracket" aria-selected="false"></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#overview"
                                   role="tab" aria-controls="overview" aria-selected="true"></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#overview"
                                   role="tab" aria-controls="overview" aria-selected="true"></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="matches-tab" data-toggle="tab" href="#matches" role="tab"
                                   aria-controls="matches" aria-selected="false">matches</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="participants-tab" data-toggle="tab" href="#participants"
                                   role="tab" aria-controls="participants" aria-selected="false"></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="prizes-tab" data-toggle="tab" href="#prizes" role="tab"
                                   aria-controls="prizes" aria-selected="false"></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#overview"
                                   role="tab" aria-controls="overview" aria-selected="true"></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#overview"
                                   role="tab" aria-controls="overview" aria-selected="true"></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#overview"
                                   role="tab" aria-controls="overview" aria-selected="true"></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#overview"
                                   role="tab" aria-controls="overview" aria-selected="true"></a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- banner-section end -->

    <!-- Testimonials Content Start -->
    <section id="tournaments-content">
        <div class="tab-content" id="myTabContent">


            <div class="tab-pane fade" id="matches" role="tabpanel" aria-labelledby="matches-tab">
                <div class="matches pb-120">
                    <div class="container overlay-cus">
                        <div class="row w-cus">
                            <div class="col-lg-12">

                                <div class="yesterday">
                                    <h4>ALL MATCHES</h4>
                                    {% if(MatchsList is not null) %}
                                    {% for match in MatchsList %}
                                    <div class="single-matches d-flex align-items-center justify-content-between">
                                        <div class="left">
                                            <p style="color: aqua">{{match.MatchName}}</p>
                                        </div>
                                        <div class="left">
                                            <p>{{match.matchDate| date('d/m/Y')}}</p>
                                        </div>
                                        <div class="mid d-flex align-items-center justify-content-between">
                                            <div class="player left-player d-flex align-items-center">
                                                <p>{{match.teams | length > 1 ? match.teams[0].TeamName : ""}}</p>
                                                <span class="tier victory">Tier VII</span>
                                                <img src="{{ asset("front/images/participant-1.png") }}" alt="image">
                                            </div>
                                            <h5 class="vs">
                                                <span>{{match.result}}</span>

                                            </h5>
                                            <div class="player right-player d-flex align-items-center">
                                                <img src="{{ asset("front/images/participant-2.png") }}" alt="image">
                                                <p>{{ match.teams | length < 2 ? "" : match.teams[1].TeamName }}</p>
                                                <span class="tier second">Tier VII</span>
                                            </div>
                                        </div>
                                        <div class="right">

                                        </div>
                                    </div>
                                    {% endfor %}
                                    {% endif %}
                                </div>
                                {{ knp_pagination_render(MatchsList) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </section>


{% endblock %}

