<!DOCTYPE html>

<title>Matchs</title>

{% block body %}
    <h1>Matchs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ match.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ match.MatchName}}</td>
            </tr>
            <tr>
                <th>Match_date</th>
                <td>{{ match.matchDate ? match.matchDate | date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Result</th>
                <td>{{ match.result }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('matchs_index') }}">back to list</a>

    <a href="{{ path('matchs_edit', {'id': match.id}) }}">edit</a>

    {{ include('matchs/_delete_form.html.twig') }}
