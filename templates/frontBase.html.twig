<!DOCTYPE html>
<html>
<head>
    <title>GamersHub | {% block title %}{% endblock %}</title>

    <link rel="shortcut icon" href="{{ asset("front/images/fav.png") }}" type="image/x-icon">
    <link rel="stylesheet" href="{{ asset("front/css/bootstrap.min.css") }}">
    <link rel="stylesheet" href="{{ asset("front/css/fontawesome.min.css") }}">
    <link rel="stylesheet" href="{{ asset("front/css/slick.css") }}">
    <link rel="stylesheet" href="{{ asset("front/css/magnific-popup.css") }}">
    <link rel="stylesheet" href="{{ asset("front/css/nice-select.css") }}">
    <link rel="stylesheet" href="{{ asset("front/css/animate.css") }}">
    <link rel="stylesheet" href="{{ asset("front/css/style.css") }}">
    {% block extraStyle %}{% endblock %}
    <!--translation -->
    <script type="text/javascript" src="https://cdn.weglot.com/weglot.min.js"></script>
    <script>
        Weglot.initialize({
            api_key: 'wg_9787fd7bcf5fae02061868ca35825d1c8',
        });
    </script>
</head>

<body>
<!-- start preloader -->
<div class="preloader" id="preloader"></div>
<!-- end preloader -->

<a href="#" class="scrollToTop"><i class="fas fa-angle-double-up"></i></a>

<!-- header-section start -->
<header id="header-section">
    <div class="overlay">
        <div class="container">
            <div class="row d-flex header-area">
                <div class="logo-section flex-grow-1 d-flex align-items-center" style="max-width: 197px !important;">
                    <a class="site-logo site-title" href="{{ path('home') }}">
                        <img src="{{ asset("front/images/logo.png") }}" alt="logo">
                    </a>
                </div>
                <button class="navbar-toggler ml-auto collapsed" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <nav class="navbar navbar-expand-lg p-0" style="margin-right: 20px !important;">
                    <div class="navbar-collapse collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav main-menu ml-auto">
                            <li class="menu_has_children"><a href="#0">Coaching</a>
                                <ul class="sub-menu">
                                    <li><a href={{ path('coach_index') }}>Coachs</a></li>
                                    <li><a href={{ path('sessioncoaching_index') }}>Sessions</a></li>
                                </ul>
                            </li>
                            <li><a href="{{ path("tournaments_new") }}">Tournaments</a></li>
                            <li class="menu_has_children"><a href="{{ path('categoryshow_front') }}"> Shop</a>
                                <ul class="sub-menu">
                                    <li><a href="{{ path('categoryshow_front') }}">Categories</a></li>
                                    {% if user is not null %}
                                        <li><a href="{{ path('cartshow') }}">Cart</a></li>
                                        <li><a href="{{ path('ordershowMyOrders',{ user:user.id} ) }}">My Orders</a>
                                        </li>
                                        <li><a href="{{ path('wishListshow') }}">My WishList</a></li>
                                    {% endif %}
                                </ul>
                            </li>
                            <li class="menu_has_children"><a href="#0">Sections</a>
                                <ul class="sub-menu">
                                    <li><a href="{{ path("games") }}">Games</a></li>
                                    <li><a href="{{ path("missions") }}">Missions</a></li>
                                    {% if user.player is null %}
                                        <li><a href="{{ path("player_new") }}">Become a Player</a></li>
                                    {% endif %}
                                    <li><a href="{{ path("blog_index") }}">Blog</a></li>
                                </ul>
                            </li>
                            {% if user is not null %}
                                {% if "ROLE_ADMIN" in user.roles %}
                                    <li><a href="{{ path("admin") }}">Admin</a></li>
                                {% endif %}
                            {% endif %}
                        </ul>
                    </div>
                </nav>
                <div class="right-area header-action d-flex align-items-center">
                    {% if user is not null %}
                        <a href="{{ path('app_logout') }}" class="login-btn" style="text-transform: none!important;">Logout</a>
                        <a href="{{ path('profile') }}" class="cmn-btn"
                           style="text-transform: none!important;"><i class="far fa-user"></i> Profile</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="login-btn">Login</a>
                        <a href="{{ path('register') }}" class="cmn-btn">Join Now!</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</header>
<!-- header-section end -->

{% block content %}

{% endblock %}

<!-- footer-section start -->
<footer id="footer-section">
    <div class="footer-mid pt-120">
        <div class="container">
            <div class="row d-flex">
                <div class="col-lg-8 col-md-8 d-flex justify-content-md-between justify-content-center align-items-center cus-grid">
                    <div class="logo-section">
                        <a class="site-logo site-title" href="{{ path('home') }}"><img
                                    src="{{ asset("front/images/logo.png") }}" alt="site-logo"></a>
                    </div>

                </div>
                <div class="col-lg-4 col-md-4 d-flex align-items-center justify-content-center justify-content-md-end">
                    <div class="right-area">
                        <ul class="d-flex">
                            <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                            <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-bottom">
        <div class="container">
            <div class="main-content">
                <div class="row d-flex align-items-center justify-content-center">
                    <div class="col-lg-12 col-md-6">
                        <div class="left-area text-center">
                            <p>Made with <span style="color:#e25555;font-size: 20px;"> ‚ù§ </span> by WebDiggers.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- footer-section end -->

<script src="{{ asset("front/js/jquery-3.5.1.min.js") }}"></script>
<script src="{{ asset("front/js/bootstrap.min.js") }}"></script>
<script src="{{ asset("front/js/slick.js") }}"></script>
<script src="{{ asset("front/js/jquery.nice-select.min.js") }}"></script>
<script src="{{ asset("front/js/fontawesome.js") }}"></script>
<script src="{{ asset("front/js/jquery.counterup.min.js") }}"></script>
<script src="{{ asset("front/js/jquery.waypoints.min.js") }}"></script>
<script src="{{ asset("front/js/jquery.magnific-popup.min.js") }}"></script>
<script src="{{ asset("front/js/wow.js") }}"></script>
<script src="{{ asset("front/js/main.js") }}"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
{% block extraScript %}

{% endblock %}
</body>
</html>