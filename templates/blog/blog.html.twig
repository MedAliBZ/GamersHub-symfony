{% if(publicationList is not null) %}
{% for pub in publicationList %}

 <div class="container">

    <div class="nk-gap-2"></div>
    <ul class="nk-forum nk-forum-topic">
            <li>
                <div class="nk-forum-topic-author">
                    <a href="{{ path('profile')}}">
                        <img src="https://avatars.dicebear.com/api/bottts/{{ pub.user.username}}.svg">
                    </a>
                    <div class="nk-forum-topic-author-name" title="name">
                        <a>{{pub.user.username}}</a>
                    </div>
                    <div class="nk-forum-topic-author-role">{{ pub.user.roles | join('') | split('_') | last }}</div>
                    <div class="nk-forum-topic-author-since">
                        {{pub.user.createdAt|date('Y-m-d H:i:s')}}
                    </div>
                </div>
                <div class="nk-forum-topic-content">
                    <a href="#" class="para-blog-title">
                          {{pub.title}}
                    </a>

                    <p class="para-blog-text">{{pub.description}}</p>

                    <div class="nk-forum-topic-attachments"> 
                        {# <a href="#">goodgames-free.zip</a>
                        <br>
                        (14.86 MiB) Downloaded 185 times #}
                        {% set images = pub.image| trim('*') | split("*") %}
                            <img src="{{asset('img/blog/') ~ pub.getImage() }}" class="centerBlog" alt="Image">

                    </div>
                </div>
                <div class="nk-forum-topic-footer">
                    <span class="nk-forum-topic-date">{{pub.publishedAt|date('M ,d Y 
                     h:m T')}}</span>

                    <span class="nk-forum-action-btn">
                        <a href="{{ path('Post', {"id": pub.id}) }}" class="nk-anchor"><span class="fa fa-reply"></span> Reply</a>
                    </span>
                    <span class="nk-forum-action-btn">
                        <a href="{{ path('newSpam', {"id": pub.id}) }}"><span class="fa fa-flag"></span> Report</a>
                    </span>
                </div>
                  <span class="nk-forum-topic">
                        <a  class="nk-anchor"><span class="fas fa-eye"></span> Views</a>
                         <td>{{ pub.views }}</td>
                    </span>
                <div class="nk-forum-topic-footer"></div>
            </li>
    </ul>
</div>

{% endfor %}
 {% endif %}
<section>
<div class="container">
    <div class="row vertical-gap">
        <div class="col-lg-8">
                    <div class="nk-gap-2"></div>
             <h3 class="nk-decorated-h-2"><span><span class="text-main-1">Share</span> a Post</span></h3>
