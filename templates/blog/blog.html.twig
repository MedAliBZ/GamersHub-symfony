                {% if form is defined %}
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.Title) }}
                        {{ form_widget(form.Title,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="item form-group">


                        <label class="col-form-labelcol-md-3 col-sm-3 label-align">{{ form_label(form.image,"Image") }}</label>

                        {{ form_widget (form.image,{'attr':{'class':'form-control'}}) }}



                    </div>
                    
                    <div class="form-group">
                            <button type="submit" class="nk-btn nk-btn-rounded nk-btn-color-main-1" href="blog.html">Post</button> 
                            
                        </div>
                        {{ form_end(form) }}
                {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
