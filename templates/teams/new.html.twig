{% extends 'authBase.html.twig ' %}

{% block title %}Sign Up{% endblock %}
{% block extraStyle %}
    <link rel="stylesheet" href="{{ asset("front/css/extraStyle.css") }}">
{% endblock %}
{% block auth %}
    <h4>Let's get started</h4>
    <div class="form-area">
        {% if form is defined %}
            {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
            <div class="form-group">
                {{ form_label(form.Team_name) }}
                {{ form_widget(form.Team_name) }}
                <div class="error-div">
                    {{ form_errors(form.Team_name) }}
                </div>
            </div>
           
           
          
            
            <div class="form-group">
                {{ form_label(form.gamersNb) }}
                {{ form_widget(form.gamersNb) }}
                <div class="error-div">
                    {{ form_errors(form.gamersNb) }}
                </div>
            </div>



            <div class="form-group">
                {{ form_label(form.image) }}
                {{ form_widget(form.image) }}
                <div class="error-div">
                    {{ form_errors(form.image) }}
                </div>
            </div>


             <div class="form-group">
                {{ form_label(form.matchs) }}
                {{ form_widget(form.matchs) }}
                <div class="error-div">
                    {{ form_errors(form.matchs) }}
                </div>
             </div>



           
            
       
          
          
           
            <div class="form-group">
                                <button type="submit" class="cmn-btn" href="teams.html.twig">Create Team</button> 
                
                                </div>
            {{ form_end(form) }}
        {% endif %}
    </div>
{% endblock %}

