	<!-- Custom Theme Style -->
	<link href="../build/css/custom.min.css" rel="stylesheet">
    {% endblock %}

    {% block content %}
    <!--start form-->
<div class="right_col" role="main">

				<div class="">
					<div class="page-title">
						<div class="title_left">
							<h3>TOURNAMENTS</h3>
						</div>

						<div class="title_right">
							<div class="col-md-5 col-sm-5  form-group pull-right top_search">
								<div class="input-group">
									<input type="text" class="form-control" placeholder="Search for...">
									<span class="input-group-btn">
										<button class="btn btn-default" type="button">Go!</button>
									</span>
								</div>
							</div>
						</div>
					</div>
					<div class="clearfix"></div>
					<div class="row">
						<div class="col-md-12 col-sm-12 ">
							<div class="x_panel">
								<div class="x_title">
									<h2>Tournaments form <small></small></h2>
									<ul class="nav navbar-right panel_toolbox">
										<li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
										</li>
										<li class="dropdown">
											<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
											<ul class="dropdown-menu" role="menu">
												<li><a class="dropdown-item" href="#">Settings 1</a>
												</li>
												<li><a class="dropdown-item" href="#">Settings 2</a>
												</li>
											</ul>
										</li>
										<li><a class="close-link"><i class="fa fa-close"></i></a>
										</li>
									</ul>
									<div class="clearfix"></div>
								</div>
								<div class="x_content">
									<br />
									{{ form_start(form) }}
										<div class="item form-group">
											<label class="col-form-label col-md-3 col-sm-3 label-align" for="name">Tournament name <span class="required">*</span>
											</label>
											<div class="col-md-6 col-sm-6 ">
											{{ form_errors(form.name) }}
											{{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
											</div>
										</div>
										<div class="item form-group">
											<label class="col-form-label col-md-3 col-sm-3 label-align" for="decription">Tournament description <span class="required">*</span>
											</label>
											<div class="col-md-6 col-sm-6 ">
											{{ form_widget(form.decription,{'attr':{'class':'form-control'}}) }}
											</div>
										</div>
										<div class="item form-group">
											<label for="TeamSize" class="col-form-label col-md-3 col-sm-3 label-align">Team size </label>
											<div class="col-md-6 col-sm-6 ">
											{{ form_widget(form.teamSize,{'attr':{'class':'form-control'}}) }}
											</div>
										</div>
										<div class="item form-group">
											<label class="col-form-label col-md-3 col-sm-3 label-align">Start date <span class="required">*</span>
											</label>
											<div class="col-md-6 col-sm-6 ">
											{{ form_widget(form.startDate,{'attr':{'class':'form-control'}}) }}
												<script>
													function timeFunctionLong(input) {
														setTimeout(function() {
															input.type = 'text';
														}, 60000);
													}
												</script>
											</div>
										</div>
										<div class="item form-group">
											<label class="col-form-label col-md-3 col-sm-3 label-align">Finish date <span class="required">*</span>
											</label>
											<div class="col-md-6 col-sm-6 ">
											{{ form_widget(form.finishDate,{'attr':{'class':'form-control'}}) }}
												<script>
													function timeFunctionLong(input) {
														setTimeout(function() {
															input.type = 'text';
														}, 60000);
													}
												</script>
											</div>
										</div>
										<div class="ln_solid"></div>
										<div class="item form-group">
											<div class="col-md-6 col-sm-6 offset-md-3">
												<button type="submit" class="btn btn-success">Add</button>
											</div>
										</div>
									{{ form_end(form) }}
								</div>
							</div>
						</div>
					</div>
							
	</div>
</div>
                    <!--end form-->
<!--start table-->
	<div class="col-md-12 col-sm-12" style="margin-top: 20px;">
        <div class="x_panel">
            <div class="x_title">
                <h2>TOURNAMENTS TABLE</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <p class="text-muted font-13 m-b-30">

                            </p>
                            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Tournament Name</th>
                                    <th>Description</th>
                                    <th>Team Size</th>
                                    <th>Start date</th>
                                    <th>Finish Date</th>
                                    <th>Update</th>
									<th>Delete</th>
                                </tr>
                                </thead>
								<tbody>
								{% if(tournaments is not null) %}
                                    {% for tr in tournaments %}
                                        <tr>
								<td>{{ tr.id }}</td>
								<td>{{ tr.name }}</td>
								<td>{{ tr.decription }}</td>
								<td>{{ tr.teamSize }}</td>
								<td>{{ tr.startDate |date("m/d/Y") }}</td>
								<td>{{ tr.finishDate |date("m/d/Y") }}</td>
								<td><a type="Update" href="{{ path("tournaments_edit" ,  {'id': tr.id}) }}" class="btn btn-success">Update</a></td>
								<td><a href="{{ path("tournaments_delete" ,  {'id': tr.id}) }}" class="btn btn-success">Delete</a></td>
								
                                {# <div class="ln_solid"></div>
										<div class="item form-group">
											<div class="col-md-6 col-sm-6 offset-md-3">
                                                <button type="Update" class="btn btn-success">Update</button>
                                                <button type="Delete" class="btn btn-success">Delete</button>
											</div>
										</div> #}
									
									{% endfor %}
									{% endif %}
								</tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
									
    {% endblock %}
